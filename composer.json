{
    "name": "hardimpact/opencode-sdk-laravel",
    "description": "Laravel SDK for the OpenCode AI coding agent API",
    "keywords": [
        "hardimpact",
        "laravel",
        "opencode",
        "ai",
        "sdk"
    ],
    "homepage": "https://github.com/hardimpactdev/opencode-sdk-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Kartel",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "saloonphp/saloon": "^3.0",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "larastan/larastan": "^3.0",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "HardImpact\\OpenCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HardImpact\\OpenCode\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HardImpact\\OpenCode\\OpenCodeServiceProvider"
            ],
            "aliases": {
                "OpenCode": "HardImpact\\OpenCode\\Facades\\OpenCode"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
